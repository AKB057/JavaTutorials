class Solution {
    public static void main (String[] small) {
        int multiple;
        Scanner s= new Scanner(System.in);

        system.out.println("Enter a positive integer");
        int n= s.nextint();
        if(n%2==0){
            system.out.println(n);
        }
        else{
            multiple= n*2;
            system.out.println(multiple);
        }
    }
}